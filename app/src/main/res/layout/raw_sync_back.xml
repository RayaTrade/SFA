<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:weightSum="6"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:textSize="11dp"
            android:gravity="center"
            android:id="@+id/Txtsyncbacktype"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="Type"
            android:textColor="@color/colorPrimary"
            android:layout_width="16px"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="11dp"
            android:gravity="center"
            android:id="@+id/TxtsyncbackOfflineId"
            android:layout_weight="1"
            android:text="Offline_Id"
            android:layout_width="16px"
            android:layout_height="wrap_content" />

        <TextView
            android:textSize="11dp"
            android:gravity="center"
            android:id="@+id/TxtsyncbacknlineId"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="Online_Id"
            android:textColor="@color/red"
            android:layout_width="16px"
            android:layout_height="wrap_content" />

        <TextView
        android:textSize="11dp"
        android:gravity="center"
        android:id="@+id/TxtsyncbackCustNum"
        android:layout_weight="1"
        android:textStyle="bold"
        android:text="Cus.Num"
        android:layout_width="16px"
        android:layout_height="wrap_content" />

        <TextView
            android:textSize="11dp"
            android:gravity="center"
            android:id="@+id/TxtsyncbackItemSaved"
            android:layout_weight="1"
            android:textStyle="bold"
            android:text="Items"
            android:textColor="@color/colorPrimary"
            android:layout_width="16px"
            android:layout_height="wrap_content" />


        <Button
            android:textSize="9dp"
            android:gravity="center"
            android:id="@+id/btnsyncback"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_weight="1"
            android:textStyle="bold"
            android:textColor="@color/colorPrimary"
            android:text="show"
            android:layout_width="16px"
            android:layout_height="wrap_content" />

    </LinearLayout>

</android.support.v7.widget.CardView>