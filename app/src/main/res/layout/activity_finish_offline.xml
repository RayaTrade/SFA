<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">


        <TextView
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:padding="8dp"
            android:textColor="#4d4d4d"
            android:text="Offline Save !"
            android:textSize="25dp"
            android:gravity="center" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="For placing order Offline"
            android:textSize="16dp"
            android:gravity="center" />

        <ImageView android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="42dp"
            android:layout_marginBottom="80dp"
            android:src="@drawable/correct_offline"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Offline ID"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/OfflineOrderIDlbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="right"
                    android:layout_marginLeft="34dp"
                    android:gravity="right"
                    android:text="#####"
                    android:textColor="@android:color/black"
                    android:textSize="16dp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Total Price"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/OfflinetotalOrderlbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="right"
                    android:layout_marginLeft="25dp"
                    android:gravity="right"
                    android:text="$ 3.50"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:padding="6dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:gravity="center"
                    android:text="Promotion:"
                    android:textSize="16dp" />


                <TextView
                    android:id="@+id/Promtion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="right"
                    android:layout_marginLeft="25dp"
                    android:gravity="right"
                    android:text="Promotion"
                    android:textAlignment="viewStart"
                    android:textColor="@android:color/holo_blue_dark"
                    android:textSize="16dp"
                    android:textStyle="bold" />

                />

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>

    <Button
        android:id="@+id/OfflinebtnDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:padding="16dp"
        android:textColor="@color/colorWhite"
        android:layout_margin="5dp"
        android:backgroundTint="@android:color/holo_blue_dark"
        android:text="DONE"
        android:textSize="15dp"
        android:gravity="center" />

    <Button
        android:id="@+id/Print_offline"
        android:layout_width="63dp"
        android:layout_height="56dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="21dp"
        android:background="@drawable/printer" />


</RelativeLayout>
