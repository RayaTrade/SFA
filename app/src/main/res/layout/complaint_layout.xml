<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:background="@color/colorWhite"
    android:orientation="vertical"
    android:layout_gravity="center_vertical|center_horizontal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="5dp"
            android:text="Complaint:"
            android:textColor="@color/text_color_for_movie_overview"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/Com_exit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="5dp"
            android:background="@drawable/roundimagebutton"
            app:srcCompat="@android:drawable/ic_delete" />
    </LinearLayout>

    <TextView
        android:id="@+id/Com_Customenumber"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="TextView"
        android:textColor="@color/text_color_for_movie_overview"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/Com_Customename"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="TextView"
        android:textColor="@color/text_color_for_movie_overview"
        android:textSize="14sp" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <EditText
                android:id="@+id/Com_text"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:ems="10"
                android:gravity="start|top"
                android:hint="Write your complaint message here ...."
                android:inputType="textMultiLine"
                android:textColor="@color/text_color_for_movie_overview" />

            <Button
                android:id="@+id/Com_Submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#2ECC71"
                android:text="Submit" />

        </LinearLayout>
    </android.support.v7.widget.CardView>


    </LinearLayout>
