<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:id="@+id/fragmentlayout_items"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <LinearLayout
        android:background="#0079D6"
        android:weightSum="3"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:textColor="@color/colorWhite"
            android:layout_weight="1.5"
            android:layout_width="18px"
            android:layout_height="wrap_content"
            android:text="Item Code"
            android:textSize="16dp"
            android:gravity="center"
            android:id="@+id/TxtViewItemCodeSyncBack"
            android:layout_alignParentLeft="true"/>



        <TextView
            android:id="@+id/TxtViewQtySyncBack"
            android:layout_weight="0.6"
            android:textSize="16dp"
            android:gravity="center"
            android:text="Qty"
            android:layout_width="16px"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content" />


        <TextView
            android:id="@+id/TxtViewSyncBackTotal"
            android:layout_weight="0.8"
            android:textColor="@color/colorWhite"
            android:textSize="16dp"
            android:gravity="center"
            android:text="Total"
            android:layout_width="18px"
            android:layout_height="wrap_content" />

    </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <ProgressBar
            android:id="@+id/progress_bar_fragment_item"
            style="?android:progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_marginTop="42dp"
            android:layout_marginBottom="60dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:indeterminateTint="@color/colorPrimary" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_item_sync_back"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v7.widget.RecyclerView>

        </FrameLayout>

    </LinearLayout>
</RelativeLayout>